				<include>FullscreenDimensions</include>
				<texture>common/black.png</texture>
			</control>
			<control type="videowindow">
				<include>FullscreenDimensions</include>
			</control>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(homevis) + Player.HasAudio</visible>			
